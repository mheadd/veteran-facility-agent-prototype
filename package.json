{
  "name": "veteran-facility-agent",
  "version": "1.0.0",
  "description": "AI agent to help veterans find VA facilities and transportation options",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "init-db": "node scripts/init-db.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles", 
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:integration": "jest --testPathPattern=integration --detectOpenHandles",
    "setup": "bash scripts/setup.sh"
  },
  "keywords": ["veterans", "va", "facilities", "transportation", "ai-agent"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "redis": "^4.6.8",
    "sqlite3": "^5.1.6",
    "node-geocoder": "^4.2.0",
    "@turf/distance": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "moment": "^2.29.4",
    "cheerio": "^1.0.0-rc.12",
    "gtfs": "^4.8.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 70000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}