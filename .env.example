# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
REDIS_URL=redis://localhost:6379
SQLITE_DB_PATH=./data/veteran_agent.db

# LLM Configuration
OLLAMA_URL=http://localhost:11434
DEFAULT_MODEL=phi3:mini
MODEL_TIMEOUT=30000

# API Keys (obtain from respective services)
# Weather API
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
WEATHERAPI_KEY=your_weatherapi_key_here

# Geocoding Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
MAPBOX_API_KEY=your_mapbox_api_key_here

# Transit APIs
GOOGLE_DIRECTIONS_API_KEY=your_google_directions_api_key_here

# VA API Configuration
VA_API_BASE_URL=https://sandbox-api.va.gov/services/va_facilities/v1
VA_API_KEY=your_va_api_key_here
VA_API_TIMEOUT=10000

# Application Settings
DEFAULT_SEARCH_RADIUS=50
MAX_FACILITIES_RETURNED=5
WEATHER_CACHE_DURATION=300
FACILITY_CACHE_DURATION=3600

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100